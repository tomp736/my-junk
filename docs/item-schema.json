{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Item Listing",
  "description": "Schema for an item for sale with bilingual support (English/Polish)",
  "type": "object",
  "required": ["id", "title", "price", "status"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the item"
    },
    "title": {
      "type": "object",
      "description": "Item title/name in multiple languages",
      "required": ["en", "pl"],
      "properties": {
        "en": {
          "type": "string",
          "description": "Title in English"
        },
        "pl": {
          "type": "string",
          "description": "Title in Polish"
        }
      }
    },
    "description": {
      "type": "object",
      "description": "Detailed description of the item in multiple languages",
      "required": ["en", "pl"],
      "properties": {
        "en": {
          "type": "string",
          "description": "Description in English"
        },
        "pl": {
          "type": "string",
          "description": "Description in Polish"
        }
      }
    },
    "price": {
      "type": "number",
      "description": "Price in your local currency",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "description": "Currency code (e.g., PLN, EUR, USD)",
      "default": "PLN",
      "enum": ["PLN", "EUR", "USD", "GBP", "CAD", "AUD"]
    },
    "condition": {
      "type": "string",
      "enum": ["new", "like-new", "good", "fair", "poor"],
      "description": "Condition of the item"
    },
    "category": {
      "type": "string",
      "description": "Item category (e.g., electronics, furniture, clothing)"
    },
    "status": {
      "type": "string",
      "enum": ["available", "listed", "pending", "sold", "removed"],
      "description": "Current status of the listing"
    },
    "images": {
      "type": "array",
      "description": "Array of image paths",
      "items": {
        "type": "string"
      }
    },
    "datePosted": {
      "type": "string",
      "format": "date-time",
      "description": "Date when the item was listed"
    },
    "location": {
      "type": "string",
      "description": "Location where item is available (city in Poland or shipping details)"
    },
    "tags": {
      "type": "array",
      "description": "Tags for easier searching (can be in English, Polish, or both)",
      "items": {
        "type": "string"
      }
    },
    "listingUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to the marketplace listing (OLX, Allegro, Facebook, etc.)"
    },
    "listedDate": {
      "type": "string",
      "format": "date-time",
      "description": "Date when the item was listed on the marketplace"
    }
  }
}
